#include "stdio.h"
#include "conio.h"
#include <stdlib.h>
   main()
	{
	void guide();
	guide();
	}

	 void guide()
		 {	
		  void calcul();
	    void chooseaver();
      void chooseA();
	    void chooseB();
	    void choosetotal();
		  void choosesuccd(); 
  	  for(;;)
				{
				system("cls");
				choosesuccd(); 
	      if(getch()==17)
					{
					break;
					} 
		    if(getch()==80)
					{
					system("cls");
			    chooseaver();
					  if(getch()==17)
							{
				     	break;
							} 
						if(getch(),getch()==77)
							{
							system("cls");
							chooseA();
							if(getch(),getch()==77)
								{
								system("cls");
								choosetotal();
 							 if(getch(),getch()==77)
									{ 
								   system("cls");
									continue;
									}	
								
								}	
							else if(getch(),getch()==80)
									{
							  system("cls");
							  chooseB();
								if(getch(),getch()==77)
								{
								system("cls");
								choosetotal();
 							 if(getch(),getch()==77)
									{ 
								   system("cls");
									continue;
									}	
								
								}	

									}
								
							}
						

					}
		    else if(getch()==77)
					{   
					system("cls");
					chooseA();
					if(getch(),getch()==77)
					{
				  system("cls");
					choosetotal();
					if(getch(),getch()==77)
						{ 
						system("cls");
						continue;
						}
					}
					}
				}
			system("cls");
      calcul();
		 }


