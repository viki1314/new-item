#include <stdio.h>
#include <stdlib.h>
  
viod average(float *p,int k)
			{
			int n;
    float average,sum=0,x=0;    //平均值计算，输出
       for(n=0;n<k;n++)   
				 { 
				 x=p[n];
        sum=sum+x;
    }
    average=sum/(float)i;
    printf("平均数是： %.2f \n",average);
}
int main ()
{
    int i,n;
    float *pData;

    printf ("要输入的数字的数目：");
    scanf ("%d",&i);

    pData = (float*) calloc (i,sizeof(float));
    if (pData==NULL) exit (1);

    for (n=0;n<i;n++)
    {
        printf ("请输入数字 #%d：",n+1);
        scanf ("%f",&pData[n]);
    }

    average(&pData,i);
    free (pData);
    return 0;
}
